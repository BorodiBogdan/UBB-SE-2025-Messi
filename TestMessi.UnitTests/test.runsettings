<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
	<!-- Configurations for test execution -->
	<RunConfiguration>
		<TargetPlatform>x64</TargetPlatform>
		<!-- Matches your RuntimeIdentifiers -->
		<TargetFrameworkVersion>net8.0</TargetFrameworkVersion>
		<!-- Simplified to just net8.0 -->
		<DesignMode>True</DesignMode>
		<!-- Important for UI tests -->
		<CollectSourceInformation>False</CollectSourceInformation>
		<!-- Helps with COM exceptions -->
		<DisableAppDomain>True</DisableAppDomain>
		<!-- Recommended for WinUI tests -->
	</RunConfiguration>

	<!-- Test logger settings -->
	<LoggerRunSettings>
		<Loggers>
			<Logger friendlyName="console" />
			<Logger friendlyName="trx" />
			<!-- Adds TRX logger for test results -->
		</Loggers>
	</LoggerRunSettings>

	<!-- MSTest settings optimized for WinUI -->
	<MSTest>
		<Parallelize>
			<Workers>1</Workers>
			<!-- Reduced to 1 for UI tests to avoid conflicts -->
			<Scope>ClassLevel</Scope>
		</Parallelize>
		<ForcedLegacyMode>false</ForcedLegacyMode>
		<!-- Set to false for modern test projects -->
		<CaptureTraceOutput>true</CaptureTraceOutput>
		<DeleteDeploymentDirectoryAfterTestRunIsComplete>true</DeleteDeploymentDirectoryAfterTestRunIsComplete>
	</MSTest>

	<!-- Special settings for Windows App SDK/WinUI tests -->
	<TestRunParameters>
		<Parameter name="WindowsAppSDKVersion" value="1.7.250310001" />
		<!-- Matches your SDK version -->
		<Parameter name="WinUITests" value="true" />
	</TestRunParameters>

	<!-- Deployment settings - important for packaged tests -->
	<Deployment>
		<DeploymentItem filename="Assets\" />
		<!-- Deploy your test assets -->
		<DeploymentItem filename="UnitTestApp.xaml" />
	</Deployment>
</RunSettings>